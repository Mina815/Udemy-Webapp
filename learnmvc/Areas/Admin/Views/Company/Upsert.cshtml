@model learnmvc.Models.Company


       
<form asp-action="Upsert" method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Edit" : "Create") Company</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="mb-3">
                    <label asp-for="Name" class="control-label">Compnay Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StreetAddress" class="control-label">Address</label>
                    <textarea asp-for="StreetAddress" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
                <hr />
                <div class="form-group">
                    @if (Model.Id != 0)
                    {
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Create" onclick="return ValidateInput()" class="btn btn-primary" />

                    }

                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>

        
    </div>
    
</form>
  



